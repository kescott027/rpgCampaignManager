# EditorConfig helps maintain consistent coding styles across editors and IDEs y

# top-most EditorConfig file
root = true

# === Default for all files ===
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# === Python files ===
[*.py]
indent_size = 4
max_line_length = 88

# === JSON ===
[*.{json,yml,yaml,toml}]
indent_size = 2
trim_trailing_whitespace = false  # to preserve formatting

# === Markdown ===
[*.md]
trim_trailing_whitespace = false  # Avoid trimming Markdown spacing
indent_size = 2

# === HTML / CSS / JS ===
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# === Makefiles ===
[Makefile]
indent_style = tab

# === Shell scripts ===
[*.sh]
indent_size = 2
